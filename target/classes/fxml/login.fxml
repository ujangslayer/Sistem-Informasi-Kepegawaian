<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.mycompany.mavenproject3.controller.LoginController" 
          stylesheets="@../styles/style.css"
          hgap="10" vgap="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    
    <VBox styleClass="card" alignment="CENTER" spacing="15" GridPane.columnSpan="2" minWidth="350">
        <Label text="Sistem Kepegawaian" styleClass="label-title"/>
        <Label text="Silakan login untuk melanjutkan" styleClass="label-sub"/>
        
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="Username" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtUsername" promptText="Masukkan username Anda"/>
        </VBox>
        
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="Password" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="txtPassword" promptText="Masukkan password Anda"/>
        </VBox>
        
        <Button text="MASUK" onAction="#onLogin" styleClass="button, btn-success" maxWidth="Infinity"/>
        <Label fx:id="lblMsg" textFill="red"/>
    </VBox>
</GridPane>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml" 
      stylesheets="@../styles/style.css"
      fx:controller="com.mycompany.mavenproject3.controller.AbsensiController">
    
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <VBox styleClass="card" spacing="15" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="&lt; Kembali" onAction="#handleBack" styleClass="btn-link"/>
            <Label text="Data Absensi Seluruh Pegawai" styleClass="label-title"/>
        </HBox>

        <TableView fx:id="table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNamaPegawai" text="Nama Pegawai" prefWidth="180"/>
                <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="100"/>
                <TableColumn fx:id="colMasuk" text="Masuk" prefWidth="100"/>
                <TableColumn fx:id="colPulang" text="Pulang" prefWidth="100"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            </columns>
        </TableView>

        <Label text="Input Absensi Manual" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ComboBox fx:id="comboPegawai" promptText="Pilih Pegawai" prefWidth="200"/>
            <DatePicker fx:id="datePicker" promptText="Tanggal"/>
            <ComboBox fx:id="comboStatus" promptText="Status" prefWidth="120"/>
            <Button text="Simpan Manual" onAction="#save" styleClass="button, btn-success"/>
        </HBox>
    </VBox>
</VBox>